<div class="component-example">
  <div class="container" style="margin-top: 250px;">
    <div class="row">
      <div class="col-md-6">
        <figure class="photo">
          <a class="lightbox" href="<%=asset_path('kit.jpg')%>" title="Image title">
            <img src="<%=asset_path('kit.jpg')%>" alt="Image">
          </a>
        </figure>
      </div>
      <div class="col-md-6">
        <figure class="photo">
          <a class="lightbox" href="<%=asset_path('kit.jpg')%>" title="Image title">
            <img src="<%=asset_path('kit.jpg')%>" alt="Image">
          </a>
        </figure>
      </div>
    </div>

    <div class="col-md-12 col-lg-12">
      <div class="card text-center">
        <div class="card-header">
          <%= property.title %>
        </div>
        <div class="card-body">
          <h5 class="card-title"><%= item.title%> </h5>
          <h5 class="card-title"></h5>
          <h5 class="card-title"><%= item.description %> </h5>
          <h5 class="card-title"></h5>
          <p class="card-text"><%= item.price %>€</p>
          <% if user_signed_in? %>
            <% if current_user.carts.last.items.where(id: item.id).empty?  %>
              <%=link_to 'Postuler', item_reservations_path(item.id), method: :post, class: "btn btn-primary"%>
            <%else%>
              <b>Vous avez déjà reservé ce bien</b> <br>
              <%=link_to 'Voir mon panier', cart_path(current_user.carts.last.id), class: ""%>
            <% end %>
          <%else%>
            <%=link_to 'Postuler', new_user_registration_path, class: "btn btn-primary"%>
          <%end%>
        </div>
        <div class="card-footer text-muted">
           days ago
        </div>
      </div>
    </div>
  </div>
</div>
