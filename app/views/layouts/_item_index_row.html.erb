<div class="tab-content m-3" >
  <div class="container" style="margin-top:150px;">
    <div class="row p-3">
      <div class="col-xs-12 col-md-4">
        <div class="card property">
          <div class="card-body">
            <h3 class="card-title text-primary"><%= item.title %></h3>
            <h5><%= item.price %> €</h5>
            <p class="card-text">
            <ul>
              <li>Titre</li>
              <li><%= item.description %> m2</li>
              <li>Titre</li>
            </ul>
            </p>
            <%= link_to 'Découvrir', item_path(item.id), class: 'btn btn-orange' %>
            <br><br>
            <%if user_signed_in?%>
              <% if current_user.carts.last.items.where(id: item.id).empty?  %>
                <%=link_to 'Ajout rapide au panier', item_reservations_path(item.id), method: :post, class: "btn btn-primary btn-sm"%>
              <%else%>
                <small class="text-primary">Déjà dans votre panier</small>
              <% end %>
            <%end%>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-md-8">
        <img src="<%=asset_path('kit.jpg')%>" alt="">
      </div>

    </div>
  </div>

</div>